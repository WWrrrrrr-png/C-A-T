package esc06.exam05_array_in_array;

public class ArrayInArrayExample {

	public static void main(String[] args) {
		// 2차원 배열 (행열의 자료구와 비슷)
		
		//배열의 초깃값은 자동으로 생성. 0
		int [][]mathScores = new int [2][3]; // 이것만 실행하면 0을로 실행
		
		//첫번째 행은 0이 고정
		mathScores [0][0]=1; 
		mathScores [0][2]  =2; 
		mathScores [0][2]  =3; 
		
		//두번째 행 
		mathScores [1][0] = 4; 
		mathScores [1][1]  =5; 
		mathScores [1][2]  =6;
		
		
		//2차원 배열은 for문이 2개 
		//첫번째 for문은 행을 가르킨다 
	   //mathScores.length:행의 크기를 나타낸다
		for(int i=0; i<mathScores.length; i++) {
			for(int j=0; i<mathScores[i].length; i++);
		System.out.println("mathScores["+i+"]["+j+"]="+mathScores[i][j] );
		}
		
		
		
	}

}
