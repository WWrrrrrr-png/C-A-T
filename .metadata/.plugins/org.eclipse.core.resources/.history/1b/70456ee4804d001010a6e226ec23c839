package sec04.exam04_logical;

public class LogicalPoperatorEaxple {

    public static void main(String[] args) {
        int charCode = 'A'; // 'A'는 문자지만 int형에 자동 형변환되어 65가 들어감

        // 대문자 확인
        //if문은 true일때 만 실행 상기
        //&연산자는 &&랑 비슷하지만 항상 양쪽 모두 계산함 = 성능때문에 쓸데없이 재실행 막기 위해서 이유는 굵직한 코드가 들어 올수 있어서
        //조검1&조건2 :조건 1이 true or false 
        if ((charCode >= 65) & (charCode <= 90)) {
            System.out.println("대문자입니다.");
        }

        // 소문자 확인 
        //if문의 전체가 true에 영함x
        if ((charCode >= 97) && (charCode <= 122)) {
            System.out.println("소문자입니다.");
        }

        // 숫자 확인
        if ((charCode >= 48) && (charCode <= 57)) {
            System.out.println("숫자입니다.");
        } 
       int value = 6; 
       if ((value % 2 ==0 ) | (value % 3 ==0)) { 
    	   
    	   System.out.println("2의 배수 이군요");
    	   
       } 
       
       if ((value % 2 == 0) || (value % 3 == 0)) {
    	   System.out.println("2또는 3의 배수이군요");
       }
        
    } // ← 이 중괄호가 빠졌었어!
}
