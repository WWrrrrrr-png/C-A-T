package sec01.exam01_variable;

public class VariableScopeExample {

	public static void main(String[] args) {
		int ver1; 
		
		if(true) {
			//ver2ëŠ” if scope
			int ver2; 
			
			ver1 = 10; 
			ver2 = 20; 
			System.out.println(ver2);
		}
	
		ver1 = 10;
        // ver2 = 20; // Compilation error: cannot find symbol ver2
		for(int i=0; i < 1; i++) { 
			int ver3;
	
			ver1 = 10;
		}

		ver1 = 10;
	}
}