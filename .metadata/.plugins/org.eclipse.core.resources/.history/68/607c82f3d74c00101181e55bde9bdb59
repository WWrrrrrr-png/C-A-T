package sec03.exam01_arthmertic;

import java.math.BigDecimal;

public class AccuracyExample03 {

	public static void main(String[] args) {
		// 부동소수점 오차 해결 
        //클래스는 기본개념
		
		BigDecimal apple = new BigDecimal(1.0); 
		BigDecimal pieceUnit = new BigDecimal("0.1"); 
		BigDecimal number = new BigDecimal("7"); 
		
		BigDecimal result = apple.subtract(pieceUnit.multiply(number)); 
		
		System.out.println("사과 한개에서"); 
		System.out.println("0.7조각의 빼면");
		System.out.println(result + "조각이 남는다");
		

	}

}
