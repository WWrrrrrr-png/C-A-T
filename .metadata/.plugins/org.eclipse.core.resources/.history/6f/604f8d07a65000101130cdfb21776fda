package esc06.exam05_array_in_array;

public class ArrayInArrayExample {

    public static void main(String[] args) {
        // 2차원 배열 생성 (2행 3열)
        int[][] mathScores = new int[2][3]; // 모든 요소는 0으로 자동 초기화됨

        // 첫 번째 행 (행 인덱스: 0)
        mathScores[0][0] = 1;
        mathScores[0][1] = 2;
        mathScores[0][2] = 3;

        // 두 번째 행 (행 인덱스: 1)
        mathScores[1][0] = 4;
        mathScores[1][1] = 5;
        mathScores[1][2] = 6;

        // 2차원 배열 출력 (고정 배열)
        System.out.println("=== mathScores 행별 합계 ===");
        for (int i = 0; i < mathScores.length; i++) {
            
        	//이거는 더한거 변수 선언
        	int rowSum = 0;
            for (int j = 0; j < mathScores[i].length; j++) {
                rowSum += mathScores[i][j];
            //System.out.println("mathScores 행 " + i + "의 합계: " + rowSum); 
          System.out.println("englishScore[" + i + "][" + j + "] = " + mathScores[i][j]);
            
            }
           
        }
        System.out.println("total"+rowSum);

        // 가변 배열 선언 (행마다 열의 크기가 다름)
        int[][] englishScore = new int[2][]; // 2행만 먼저 선언
        englishScore[0] = new int[2]; // 첫 번째 행은 2열
        englishScore[1] = new int[3]; // 두 번째 행은 3열

        // 값 대입
        englishScore[0][0] = 10;
        englishScore[0][1] = 20;

        englishScore[1][0] = 30;
        englishScore[1][1] = 40;
        englishScore[1][2] = 50;

        // 가변 배열 출력
        System.out.println("=== englishScore 출력 ===");
        for (int i = 0; i < englishScore.length; i++) { 
        	int rowsum = 0;
            for (int j = 0; j < englishScore[i].length; j++) {
                rowsum += englishScore [i][j]; 
               // System.out.println("englishScore행 " + i + "의 합계"+ rowsum);
             	System.out.println("englishScore[" + i + "][" + j + "] = " + englishScore[i][j]);
            }
        }
    }
}

