package sec04.exam07_conditinal;

public class ConditionalOperatorExample02 {

	public static void main(String[] args) {
	
		//int y = 20; 
		// int z (++x) + (y--);
      
		
		int x =10; 
		int y =20; 
		int z = (++x) + (y--); 
		
		System.out.println("x= " + x);  
		System.out.println("y=" + y); 
		System.out.println("z= "+ z);
	
		//현재 기온이 25도 이상이면 “반팔 입기”, 아니면 “긴팔 입기”를 출력하라. 
		
		int temperture = 25; 
	    
	    String weather = (temperture < 26 ) ? "반팔" : "긴팔"; 
		
	    System.out.println("기온이 25" + weather + "반팔을 착용");
	
	
	}

	
	
}
