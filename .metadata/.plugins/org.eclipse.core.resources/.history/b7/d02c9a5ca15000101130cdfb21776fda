package esc06.exam05_array_in_array;

public class ArrayInArrayExample {

    public static void main(String[] args) {
        // 2차원 배열 생성 (2행 3열)
        int[][] mathScores = new int[2][3]; // 모든 요소는 0으로 자동 초기화됨

        // 첫 번째 행 (행 인덱스: 0)
        mathScores[0][0] = 1;
        mathScores[0][1] = 2; // 오타 수정 (원래는 [0][2]에 두 번 저장)
        mathScores[0][2] = 3;

        // 두 번째 행 (행 인덱스: 1)
        mathScores[1][0] = 4;
        mathScores[1][1] = 5;
        mathScores[1][2] = 6;

        // 2차원 배열 출력: 바깥 for문은 행, 안쪽 for문은 열
        for (int i = 0; i < mathScores.length; i++) {
            for (int j = 0; j < mathScores[i].length; j++) {
                System.out.println("mathScores[" + i + "][" + j + "] = " + mathScores[i][j]);
            }
        }
    }
}
