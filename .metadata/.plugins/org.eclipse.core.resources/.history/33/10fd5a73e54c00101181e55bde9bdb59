package sec03.exam01_sincrease_decrease;

public class IncreaseDecreaseOperatorExample {

	public static void main(String[] args) {
		// 증감연산자 
		//증가: ++  
		//감소: -- 
		//증감연산자의 부호의 피연산자의 위치에 따라서 계산 순서가 달라짐 
		
		int x = 10; 
	       x++; //값 먼저 대입하고 나중에 증가
		   ++x; //먼저 증가하고 그 값을 대입
	    	System.out.println(x);
		
	    	int y = 300; 
		y++;
		++y; 
		System.out.println(y);
		
		int o = 100; 
	     o++; 
		 ++o;
		System.out.println(o); 
		
		//후위 증가  
		
		int a = 283837; 
		
		a++; 
		
		System.out.println(a); 
		
		//전위 증가 
		
		int a2 =283837; 
		++a; 
		System.out.println(a2);
	
				
		
		
		
		
		
	}

}
