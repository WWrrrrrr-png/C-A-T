package esc06.exam02_array.bynew;

public class ArrayCreateByValueListExample3 {

    public static void main(String[] args) {
        
        // int 배열
        int[] arr1 = new int[3]; // 3칸 * 4바이트 = 12바이트
        for (int i = 0; i < 3; i++) {
            System.out.println("arr1[" + i + "] : " + arr1[i]); // 0으로 초기화
        }

        arr1[0] = 10;
        arr1[1] = 20;
        arr1[2] = 30;
        for (int i = 0; i < 3; i++) {
            System.out.println("arr1[" + i + "] : " + arr1[i]);
        }

        // double 배열
        double[] arr2 = new double[3]; // 새로운 이름으로 변경 (arr1과 중복 안되게)
        for (int i = 0; i < 3; i++) {
            System.out.println("arr2[" + i + "] : " + arr2[i]); // 0.0으로 초기화
        }

        arr2[0] = 0.1;
        arr2[1] = 0.2;
        arr2[2] = 0.3;
        for (int i = 0; i < 3; i++) {
            System.out.println("arr2[" + i + "] : " + arr2[i]);
        }

        // 참조타입 (String) 배열
        String[] arr3 = new String[3];
        for (int i = 0; i < 3; i++) {
            System.out.println("arr3[" + i + "] : " + arr3[i]); // null로 초기화
        }

        arr3[0] = "아";
        arr3[1] = "아";
        arr3[2] = "아"; // 인덱스 3이 아니라 2 (0~2까지만 존재)

        for (int i = 0; i < 3; i++) {
            System.out.println("arr3[" + i + "] : " + arr3[i]);
        }
    }
}

