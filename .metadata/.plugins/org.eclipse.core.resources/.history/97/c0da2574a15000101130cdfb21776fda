package esc06.exam05_array_in_array;

public class ArrayInArrayExample {

    public static void main(String[] args) {
        // 2차원 배열 생성 (2행 3열)
        int[][] mathScores = new int[2][3]; // 모든 요소는 0으로 자동 초기화됨
        //new int[2][3] 첫번째 대괄호 행크기 두번째 대괄호 열크기
        
        
        // 첫 번째 행 (행 인덱스: 0)
        mathScores[0][0] = 1;
        mathScores[0][1] = 2; // 오타 수정 (원래는 [0][2]에 두 번 저장)
        mathScores[0][2] = 3;

        // 두 번째 행 (행 인덱스: 1)
        mathScores[1][0] = 4;
        mathScores[1][1] = 5;
        mathScores[1][2] = 6;

        // 2차원 배열 출력: 바깥 for문은 행, 안쪽 for문은 열
        for (int i = 0; i < mathScores.length; i++) {
            for (int j = 0; j < mathScores[i].length; j++) {
                System.out.println("mathScores[" + i + "][" + j + "] = " + mathScores[i][j]);
            }
        }   
        
        
        System.out.println();
        
        //행마다 열의 크기가 다름 첫번째 행과 두번째 행의 갯수가 다른경우 :가변배열
       //행을 2행, 첫번째 핸의 열의 크기는 2열, 두번째 행의 열의 크기는 3열 
        //두번째 열의 크기를 고정x 후 각각 지정
        int [][] englishScore = new int[2][]; 
        //첫번째 행은 열을 2개를 가지고 있다
        englishScore[0] = new int [2];//열의 크기가 2  
        
        englishScore[1] = new int [3]; //열의 크기가 3 
         
        for (int i = 0; i < englishScore.length; i++) {
        	 for(int j=0;  j<englishScore[i].length; i++) {
        		 System.out.println("mathScores[" + i + "][" + j + "] = " + mathScores[i][j]);
        	 }
        	
        }
        
    
    
    
    
    }
}
